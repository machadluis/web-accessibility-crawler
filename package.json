{
  "name": "web-accessibility-crawler",
  "version": "2.0.0",
  "description": "A web accessibility testing crawler using Puppeteer and Axe.",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "postinstall": "node postinstall.js",
    "preuninstall": "node preuninstall.js",
    "run-accessibility-test": "tsx src/index.ts",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test": "vitest",
    "test:accessibility": "npx tsx node_modules/web-accessibility-crawler/src/index.ts",

    "dev": "vite",
    "build": "vue-tsc -b && vite build",
    "preview": "vite preview"
  },
  "keywords": [
    "accessibility",
    "webcrawler",
    "puppeteer"
  ],
  "contributors": [
    "Lu√≠s Machado",
    "Margarida Semedo",
    "Tiago Dias"
  ],
  "license": "MIT",
  "dependencies": {
    "@axe-core/puppeteer": "^4.10.0",
    "@tailwindcss/vite": "^4.0.8",
    "puppeteer": "^23.1.1",
    "tailwindcss": "^4.0.8",
    "vue": "^3.5.13"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.2.1",
    "@vitest/coverage-v8": "3.0.7",
    "@vitest/ui": "^3.0.7",
    "@vue/tsconfig": "^0.7.0",
    "tsx": "^4.19.3",
    "typescript": "~5.7.2",
    "vite": "^6.2.0",
    "vitest": "^3.0.7",
    "vue-tsc": "^2.2.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/machadluis/web-accessibility-crawler.git"
  },
  "bugs": {
    "url": "https://github.com/machadluis/web-accessibility-crawler/issues"
  },
  "homepage": "https://github.com/machadluis/web-accessibility-crawler#readme"
}
